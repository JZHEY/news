<div class="item-news type-3" data-url="{{url}}" data-uniquekey="{{uniquekey}}" data-pageNum="{{pageNum}}"
    data-index="{{index}}">
    <div class="main">
        <div class="title">
            <h1>{{title}}</h1>
        </div>
        <div class="pic">
            <div class="img">
                <img src="{{thumbnail_pic_s}}" alt="">
            </div>
            <div class="img">
                <img src="{{thumbnail_pic_s02}}" alt="">
            </div>
            <div class="img">
                <img src="{{thumbnail_pic_s03}}" alt="">
            </div>
        </div>
    </div>
    <div class="info">
        <span class="author">{{author}}</span>
        <span class="date">{{date}}</span>
    </div>
</div>